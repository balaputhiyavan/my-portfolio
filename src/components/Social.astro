---
// components imports
import {Icon} from "astro-icon/components";

// config import
import {SOCIALS} from '@/config';

---

<div class={'flex gap-6 mt-4'}>
    {
        SOCIALS.map((networkS) => (
            networkS.show && (
                    <a
                            class={`${networkS.name} text-[22px] text-slate-400 hover:text-slate-900 dark:text-slate-500 dark:hover:text-white transition-all duration-300 transform hover:-translate-y-1`}
                            href={networkS.url}
                            target="_blank"
                            aria-label={networkS.name + "-link"}
                    >
                        <Icon name={networkS.icon} />
                    </a>
            )
        ))
    }
</div>

