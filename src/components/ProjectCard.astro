---
// astro imports
import {Image} from "astro:assets";

const { title, tags, cover, id } = Astro.props;
---
<a href={`/projects/${id}`} class="group block h-full">
    <div class="relative h-full overflow-hidden rounded-[32px] glass-panel group-hover:border-accent-cyan/50 transition-all duration-500">
        <!-- Image Container -->
        <div class="relative h-64 overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent z-10 opacity-60 group-hover:opacity-40 transition-opacity duration-500"></div>
            
            <Image
                    transition:name={ `${id}-image` }
                    src={cover}
                    alt={"cover preview of " + title}
                    class={"object-cover w-full h-full transform transition-transform duration-700 group-hover:scale-110"}
                    loading={'eager'}
            />
            
            <!-- Tags Overlay -->
            <div class="absolute top-4 right-4 z-20 flex flex-wrap justify-end gap-2">
                {tags.slice(0, 2).map(tag => (
                    <span class="px-3 py-1 text-xs font-medium text-white bg-black/50 backdrop-blur-md rounded-full border border-white/10">
                        {tag}
                    </span>
                ))}
            </div>
        </div>

        <!-- Content -->
        <div class="p-6 relative z-10">
            <h4 class="font-bold text-2xl text-n900 dark:text-white mb-2 group-hover:text-transparent group-hover:bg-clip-text group-hover:bg-gradient-to-r group-hover:from-primary-light group-hover:to-accent-purple dark:group-hover:from-primary-dark dark:group-hover:to-accent-pink transition-colors">
                {title}
            </h4>
            <div class="flex items-center gap-2 text-primary-light dark:text-primary-dark font-medium text-sm group-hover:translate-x-2 transition-transform duration-300">
                View Project 
                <svg xmlns="http://www.w3.org/2000/svg" width="16" h="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-right"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
            </div>
        </div>
    </div>
</a>